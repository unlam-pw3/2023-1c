@model Clase3.MVC.Dominio.Entidades.TipoPoder
<h1>Agregar Poder</h1>

<!-- Remplaza a la etiqueta <form></form> -->

@using (Html.BeginForm("Agregar", "TipoPoderes", FormMethod.Post))
{
    <div>
        @Html.LabelFor(model => model.Nombre)
        @Html.TextBoxFor(model => model.Nombre)
    </div>
    @if (!string.IsNullOrEmpty(ViewBag.Mensaje))
    {
        <div class="alert alert-danger">
            @ViewBag.Mensaje
        </div>
    }
    <div>
        <input type="submit" value="Agregar" />
    </div>
}
