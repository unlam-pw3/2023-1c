@model IEnumerable<Clase7.EF.IslaDelTesoro.Data.Entidades.Tesoro>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div>
    <a href="/tesoros/crear">Crear</a>
</div>
@foreach (var item in Model)
{
    <div>
        <span class="h4"><a href="/tesoros/editar/@item.Id">@item.Nombre ($@item.Valor)</a></span> <a href="/tesoros/eliminar/@item.Id"><img src="https://cdn-icons-png.flaticon.com/512/3221/3221845.png" style="height:10px" /></a>
        <div>
            <img src="@item.ImagenUrl" style="height:100px" />
        </div>
        <p><i>@item.Descripcion</i></p>
        @*<p>@item.Ubicacion</p>*@
    </div>
}
